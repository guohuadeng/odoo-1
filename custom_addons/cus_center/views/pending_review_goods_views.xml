<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_pending_review_goods" model="ir.actions.act_window">
            <field name="name">待审核归类商品</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cus_center.goods_classify</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state', '=', 'submitted')]</field>
        </record>

        <!-- 待审核归类 列表视图 -->
        <record id="view_pending_review_application_tree" model="ir.ui.view">
            <field name="name">pending goods classify tree</field>
            <field name="model">cus_center.goods_classify</field>
            <!--<field name="priority">2</field>-->
            <field name="arch" type="xml">
                <tree default_order="create_date desc" create="false">
                    <field name="cus_goods_code" string="客户料号"/>
                    <field name="cus_goods_tariff_id" string="商品编号"/>
                    <field name="goods_name" string="商品名称"/>
                    <field name="first_unit" string="第一计量单位"/>
                    <field name="second_unit" string="第二计量单位"/>
                    <field name="origin_country_id" string="原产国"/>
                    <field name="destination_country_id" string="目的国"/>
                    <field name="ManualNo" string="备案号"/>
                    <field name="ManualSN" string="备案序号"/>
                    <field name="state" string="状态" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- 待审核归类 form视图 -->
        <record id="view_pending_review_application_form" model="ir.ui.view">
            <field name="name">pending goods classify Form view</field>
            <field name="model">cus_center.goods_classify</field>
            <field name="arch" type="xml">
                <form create="false">
                    <header>
                        <button name="already_reviewed_btn" string="审核通过" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', 'in', ['draft','refused','approve'])]}"/>
                        <button name="refused_reviewed_btn" string="审核拒绝" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', 'in', ['draft','refused','approve'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,succeed"
                               statusbar_colors="{'draft':'blue', 'submitted':'green', 'refused':'red'}"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="cus_goods_code"  placeholder="客户料号" readonly="1"/>
                            </h1>
                        </div>

                        <group col="3" colspan="1">
                            <group>
                                <field name="cus_goods_tariff_id"  string="商品编号" readonly="1"/>
                                <field name="goods_model"  string="规格型号" readonly="1"/>
                                <field name="business_company_id" string="经营单位" readonly="1"/>
                                <field name="origin_country_id"  string="原产国" readonly="1"/>
                                <field name="destination_country_id"  string="目的国" readonly="1"/>
                            </group>
                            <group>
                                <field name="goods_name"  string="商品名称" readonly="1"/>
                                <field name="first_unit"  string="第一计量单位" readonly="1"/>
                                <field name="second_unit"  string="第二计量单位" readonly="1"/>
                                <field name="deal_unit_price"  string="成交单价" readonly="1"/>
                                <field name="currency_id"  string="币制" readonly="1"/>
                            </group>
                            <group>
                                <field name="supervision_condition"  string="监管条件" readonly="1"/>
                                <field name="duty_mode_id"  string="征免方式" readonly="1"/>
                                <field name="ManualNo"  string="备案号" readonly="1"/>
                                <field name="ManualSN"  string="备案序号" readonly="1"/>
                                <field name="create_uid" readonly="1" string="创建人"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                               widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="customs_center_pending_review_tree_ids" model="ir.actions.act_window.view">
            <field name="view_mode">tree</field>
            <field name="sequence">1</field>
            <field name="view_id" ref="cus_center.view_pending_review_application_tree" />
            <field name="act_window_id" ref="cus_center.action_pending_review_goods" />
        </record>

        <record id="customs_center_pending_review_form_ids" model="ir.actions.act_window.view">
            <field name="view_mode">form</field>
            <field name="sequence">2</field>
            <field name="view_id" ref="cus_center.view_pending_review_application_form" />
            <field name="act_window_id" ref="customs_center.action_pending_review_goods" />
        </record>

    </data>
</odoo>