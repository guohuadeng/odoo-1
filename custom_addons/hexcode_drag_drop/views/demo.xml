<odoo>
    <data>

        <record id="hexcode_product_template_form" model="ir.ui.view">
            <field name="name">hexcode_product_template_form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//page[last()]" position="after">
                    <page string="Drag &amp; Drop">

                        <field name="drag_image_ids" widget="multidragndrop"/>

                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>