<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_goods_classification" model="ir.actions.act_window">
            <field name="name">商品归类</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">customs_center.goods_classify</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="view_goods_classification_search" model="ir.ui.view">
           <field name="name">goods classification search</field>
           <field name="model">customs_center.goods_classify</field>
            <field name="arch" type="xml">
                <search string="goods classification search">
                    <field name="cust_goods_code" string="客户料号"/>
                    <fieldf name="cus_goods_tariff_id" string="商品编号"/>
                    <field name="goods_name" string="商品名称"/>
                    <field name="business_company_id" string="收发货人"/>
                    <filter string="草稿" domain="[('state','=','draft')]"/>
                    <filter string="已提交" domain="[('state','=','submitted')]"/>
                    <filter string="审核通过" domain="[('state','=','approve')]"/>
                    <filter string="审核不通过" domain="[('state','=','refused')]"/>
                    <group expand="1" string="Group By">
                        <filter string="收发货人" name="group_business_company_id"
                            context="{'group_by': 'business_company_id'}"/>
                    </group>
                </search>
           </field>
        </record>

        <record id="goods_classification_tree" model="ir.ui.view">
            <field name="name">Goods Classification tree view</field>
            <field name="model">customs_center.goods_classify</field>
            <field name="arch" type="xml">
                <tree default_order="create_date desc" decoration-danger="state == 'refused'">
                    <field name="cust_goods_code" string="客户料号"/>
                    <field name="business_company_id" string="收发货人"/>
                    <field name="cus_goods_tariff_id" string="商品编号"/>
                    <field name="goods_name" string="商品名称"/>
                    <field name="goods_model" string="规格型号"/>
                    <field name="state" string="审核状态"/>
                    <!--<field name="deal_unit_price" string="成交单价"/>-->
                    <!--<field name="deal_unit_id" string="成交单位"/>-->
                </tree>
            </field>
        </record>



        <record id="goods_classification_form" model="ir.ui.view">
            <field name="name">Goods Classification Form view</field>
            <field name="model">customs_center.goods_classify</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="submit_review_btn" string="提交审核" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', 'in', ['submitted','refused','approve'])]}"/>
                        <button name="re_submit_review_btn" string="重新提交审核" type="object" class="oe_highlight"
                                attrs="{'invisible': [('state', 'in', ['draft','submitted','approve'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,succeed"
                               statusbar_colors="{'draft':'blue', 'submitted':'green', 'refused':'red'}"/>

                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="cust_goods_code"  placeholder="请录入客户料号" attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                <field name="customs_declaration_id"  placeholder="关联的报关单号" invisible="1"/>
                            </h1>
                        </div>

                        <!--<group col="3" colspan="1">-->
                            <div class="row" style="padding-top:20px">
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="business_company_id" string="收发货人" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="business_company_id" string="收发货人" options="{'no_create_edit': 1, 'no_create': 1}"
                                               attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="ManualNo" string="备案号" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="ManualNo" string="备案号" attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="ManualSN" string="备案序号" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="ManualSN" string="备案序号" attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>

                            </div>

                            <div class="row" >
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="cus_goods_tariff_id" string="商品编号" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="cus_goods_tariff_id" string="商品编号" options="{'no_create_edit': 1, 'no_create': 1}"
                                               attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="goods_name" string="商品名称" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="goods_name" string="商品名称" attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="goods_model" string="规格型号" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="goods_model" string="规格型号" widget="declare_element" options="{'tariff': 'cus_goods_tariff_id'}"
                                               attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="deal_unit_price" string="成交单价" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="deal_unit_price" string="成交单价" attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="currency_id" string="币制" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="currency_id" string="币制" options="{'no_create_edit': 1, 'no_create': 1}"
                                               attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="supervision_condition" string="监管条件" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="supervision_condition" readonly="1" string="监管条件" attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="deal_unit_id" string="成交单位" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="deal_unit_id" string="成交单位" options="{'no_create_edit': 1, 'no_create': 1}"
                                               attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="first_unit" string="法定单位" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="first_unit" readonly="1" string="第一计量单位" options="{'no_create_edit': 1, 'no_create': 1}"
                                               attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="second_unit" string="第二单位" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="second_unit" readonly="1" string="第二计量单位" options="{'no_create_edit': 1, 'no_create': 1}"
                                               attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="origin_country_id" string="原产国" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="origin_country_id" string="原产国" options="{'no_create_edit': 1, 'no_create': 1}"
                                               attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="destination_country_id" string="目的国" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="destination_country_id" string="目的国" options="{'no_create_edit': 1, 'no_create': 1}"
                                               attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <div class="col-lg-4 col-md-4"><label for="duty_mode_id" string="征免方式" style="font-weight:bold;"/></div>
                                    <div class="col-lg-8 col-md-8">
                                        <field name="duty_mode_id" string="征免方式" options="{'no_create_edit': 1, 'no_create': 1}"
                                               attrs="{'readonly': [('state', '=', 'approve')]}"/>
                                    </div>
                                </div>
                            </div>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                               widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>