        <template id="assets_backend" name="demo_assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/customs_center/static/src/css/customs_dec.css"/>
            </xpath>
        </template>


        <record id="action_pending_classified_goods" model="ir.actions.act_window">
            <field name="name">待归类历史报关商品</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">customs_center.cus_goods_list</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('customs_declaration_id','&lt;&gt;', False), ('classify_status', '=', 'no')]</field>
            <!--过滤条件：由于报关单和通关清单共用一个商品列表模型 第一个过滤条件过滤掉通关清单的商品 第二个过滤条件 过滤掉已经归类的商品-->
        </record>

        <!--通关清单 报关单 通用商品列表视图-->
        <record id="pending_classified_goods_tree" model="ir.ui.view">
            <field name="name">pending classified goods tree view</field>
            <field name="model">customs_center.cus_goods_list</field>
            <field name="arch" type="xml">
                <tree string="pending classified goods lists">
                    <field name="sequence" widget="handle"/>
                    <field name="goods_classification_id" string="客户料号"/>
                    <field name="cus_goods_tariff_id" string="商品编码" options="{'no_create_edit': 1}"/>
                    <field name="goods_name" string="商品名称"/>
                    <field name="goods_model" string="规格模型"/>
                    <field name="deal_qty" string="成交数量"/>
                    <field name="deal_unit_price" string="成交单价"/>
                    <field name="deal_unit_id" string="成交单位"/>
                    <field name="deal_total_price" string="成交总价"/>
                    <field name="currency_id" string="币制" options="{'no_create_edit': 1}"/>
                    <field name="first_qty" string="第一数量"/>
                    <field name="first_unit" string="第一单位" options="{'no_create_edit': 1}" />
                    <field name="second_qty" string="第二数量"/>
                    <field name="second_unit" string="第二单位" options="{'no_create_edit': 1}" />
                    <field name="origin_country_id" string="原产国" options="{'no_create_edit': 1}"/>
                    <field name="destination_country_id" string="目的国" options="{'no_create_edit': 1}"/>
                    <field name="duty_mode_id" string="征免方式" options="{'no_create_edit': 1}"/>
                    <field name="supervision_condition" string="监管标识" options="{'no_create_edit': 1}" />
                </tree>
            </field>
        </record>


