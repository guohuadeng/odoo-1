                    <!--<field name="origin_country_id" string="原产国"/>-->
                    <!--<field name="destination_country_id" string="目的国"/>-->
                    <!--<field name="ManualSN" string="备案序号"/>-->
                    <!--&lt;!&ndash;<field name="classify_status" string="是否已归类" invisible="1"/>&ndash;&gt;-->
                    <!--<field name="classify_status" string="是否已归类/调试字段-没问题后隐藏"/>-->
