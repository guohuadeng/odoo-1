<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_pending_classified_goods" model="ir.actions.act_window">
            <field name="name">pending classified goods</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">customs_center.cus_goods_list</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="pending_classified_goods_tree" model="ir.ui.view">
            <field name="name">pending classified goods tree view</field>
            <field name="model">customs_center.cus_goods_list</field>
            <field name="arch" type="xml">
                <tree string="pending classified goods lists" default_order="create_date desc">
                    <field name="customs_declaration_id" string="报关单ID"/>
                    <field name="cus_goods_tariff_id" string="商品编号"/>
                    <field name="goods_name" string="商品名称"/>
                    <field name="goods_classification_id" string="客户料号"/>
                    <field name="goods_model" string="规格型号"/>
                    <!--<field name="deal_unit_price" string="成交单价"/>-->
                    <!--<field name="deal_qty" string="成交数量"/>-->
                    <!--<field name="deal_total_price" string="成交总价"/>-->
                    <field name="origin_country_id" string="原产国"/>
                    <field name="destination_country_id" string="目的国"/>
                    <field name="ManualSN" string="备案序号"/>
                </tree>
            </field>
        </record>

        <record id="pending_classified_goods_form" model="ir.ui.view">
            <field name="name">pending classified goods Form view</field>
            <field name="model">customs_center.cus_goods_list</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="goods_classified_btn" string="归类" type="object" class="oe_highlight"/>
                        <!--<field name="customs_order_state" widget="statusbar" statusbar_visible="draft,succeed"-->
                               <!--statusbar_colors="{'draft':'blue', 'succeed':'green', 'failure':'red'}"/>-->
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="customs_declaration_id" string="报关单ID"/>
                            </h1>
                        </div>

                        <group col="2" colspan="1">
                            <group>
                                <field name="goods_name"  string="商品名称"/>
                                <field name="goods_classification_id"  string="客户料号"/>
                                <field name="cus_goods_tariff_id"  string="商品编号"/>
                                <field name="goods_model"  string="规格型号"/>
                                <!--<field name="business_company_id" string="收发货人"/>-->
                                <field name="origin_country_id"  string="原产国"/>
                                <field name="destination_country_id"  string="目的国"/>
                                <field name="duty_mode_id"  string="征免方式"/>
                                <field name="ManualSN"  string="备案序号"/>
                            </group>
                            <group>
                                <field name="first_qty"  string="第一法定数量"/>
                                <field name="first_unit"  string="第一计量单位"/>
                                <field name="second_qty"  string="第二法定数量"/>
                                <field name="second_unit"  string="第二计量单位"/>
                                <field name="deal_unit_price"  string="成交单价"/>
                                <field name="deal_unit"  string="成交单位"/>
                                <field name="currency_id"  string="币制"/>
                                <field name="deal_qty"  string="成交数量"/>
                                <field name="deal_total_price"  string="成交总价"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"
                               widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

    </data>
</odoo>