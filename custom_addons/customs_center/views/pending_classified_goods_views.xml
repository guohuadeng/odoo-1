                    <field name="deal_total_price" string="成交总价"/>
                    <field name="currency_id" string="币制" options="{'no_create_edit': 1}"/>
                    <field name="first_qty" string="第一数量"/>
                    <field name="first_unit" string="第一单位" options="{'no_create_edit': 1}" />
                    <field name="second_qty" string="第二数量"/>
                    <field name="second_unit" string="第二单位" options="{'no_create_edit': 1}" />
                    <field name="origin_country_id" string="原产国" options="{'no_create_edit': 1}"/>
                    <field name="destination_country_id" string="目的国" options="{'no_create_edit': 1}"/>
                    <field name="duty_mode_id" string="征免方式" options="{'no_create_edit': 1}"/>
                    <field name="supervision_condition" string="监管标识" options="{'no_create_edit': 1}" />
