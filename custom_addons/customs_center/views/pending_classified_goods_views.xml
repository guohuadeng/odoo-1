        <record id="action_pending_classified_goods" model="ir.actions.act_window">
            <field name="name">pending classified goods</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">customs_center.cus_goods_list</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('customs_declaration_id','&lt;&gt;', False), ('classify_status', '=', 'no')]</field>
            <!--过滤条件：由于报关单和通关清单共用一个商品列表模型 第一个过滤条件过滤掉通关清单的商品 第二个过滤条件 过滤掉已经归类的商品-->
        </record>

