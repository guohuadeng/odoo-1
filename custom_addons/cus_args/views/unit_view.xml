<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--计量单位表-->
        <record id="cus_args_unit_action" model="ir.actions.act_window">
            <field name="name">Unit Code Table</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cus_args.unit</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="cus_args_unit_tree_view" model="ir.ui.view">
            <field name="name">cus_args.unit.tree</field>
            <field name="model">cus_args.unit</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name_cn"/>
                </tree>
            </field>
        </record>

        <record id="cus_args_unit_search_view" model="ir.ui.view">
            <field name="name">cus_args.unit.search</field>
            <field name="model">cus_args.unit</field>
            <field name="arch" type="xml">
                <search>
                    <field name="code"/>
                    <field name="name_cn"/>
                </search>
            </field>
        </record>

        <record id="cus_args_unit_form" model="ir.ui.view">
            <field name="name">cus_args.unit.form</field>
            <field name="model">cus_args.duty_mode</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="name_cn"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>