<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_trade_mode_form" model="ir.ui.view">
        <field name="name">trade mode form</field>
        <field name="model">cus_args.trade_mode</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="NameCN"/>
                        </group>
                        <group>
                            <field name="Code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_trade_mode_list" model="ir.ui.view">
        <field name="name">trade mode list</field>
        <field name="model">cus_args.trade_mode</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id"/>
                <field name="NameCN"/>
                <field name="Code"/>
            </tree>
        </field>
    </record>

    <act_window id="trade_mode_action"
                name="Trade Mode"
                res_model="cus_args.trade_mode"
                view_mode="tree,form"/>
</odoo>