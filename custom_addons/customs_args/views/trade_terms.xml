<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_trade_terms_form" model="ir.ui.view">
        <field name="name">trade terms form</field>
        <field name="model">cus_args.trade_terms</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="NameCN"/>
                        </group>
                        <group>
                            <field name="Code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_trade_terms_list" model="ir.ui.view">
        <field name="name">trade terms list</field>
        <field name="model">cus_args.trade_terms</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id"/>
                <field name="NameCN"/>
                <field name="Code"/>
            </tree>
        </field>
    </record>
    <!-- Action to open To-do Task list -->
    <act_window id="trade_terms_action"
                name="Trade Terms"
                res_model="cus_args.trade_terms"
                view_mode="tree,form"/>
</odoo>