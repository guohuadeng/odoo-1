<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_customs_country_form" model="ir.ui.view">
        <field name="name">country form</field>         <!--自定义-->
        <field name="model">cus_args.country</field>   <!--固定格式-->
        <field name="arch" type="xml">            <!--固定格式-->
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="Code"/>
                        </group>
                        <group>
                            <field name="NameCN"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_customs_country_list" model="ir.ui.view">
        <field name="name">country list</field>                       <!--自定义-->
        <field name="model">cus_args.country</field>    <!--固定格式-->
        <field name="arch" type="xml">                        <!--固定格式-->
            <tree>
                <field name="id"/>
                <field name="Code"/>
                <field name="NameCN"/>
            </tree>
        </field>
    </record>
    <!-- Action to open To-do Task list -->
    <act_window id="customs_country_action"
                name="Country"
                res_model="cus_args.country"
                view_mode="tree,form"/>
</odoo>