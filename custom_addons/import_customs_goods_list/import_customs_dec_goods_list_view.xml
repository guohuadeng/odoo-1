<?xml version="1.0"?>
<odoo>
	<data>

		<record id="import_customs_dec_goods_list_wizard_view" model="ir.ui.view">
			<field name="name">Import Goods</field>
			<field name="model">import.customs_dec.goods_list.wizard</field>
			<field name="arch" type="xml">
				<form>
					<group>
						<field name="goods_list_file"/>
					</group>
					<footer>
						<button string="Import" name="import_goods_list" class="oe_highlight" type="object"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="import_customs_dec_goods_list_action" model="ir.actions.act_window">
			<field name="name">Import Goods</field>
			<field name="res_model">import.customs_dec.goods_list.wizard</field>
			<field name="target">new</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
		</record>

		<record id="view_customs_dec_inherited_import_goods" model="ir.ui.view">
            <field name="name">Customs Dec Import Goods</field>
            <field name="model">customs_center.customs_dec</field>
            <field name="inherit_id" ref="customs_center.customs_declaration_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='dec_goods_list_ids']" position="before">
                    <button name="%(import_customs_dec_goods_list_action)d"
                    string="导入商品"
                    type="action"
                    class="btn-default"/>
                </xpath>
            </field>
        </record>

	</data>
</odoo>